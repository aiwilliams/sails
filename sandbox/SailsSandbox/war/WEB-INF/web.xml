<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app 
 xmlns="http://java.sun.com/xml/ns/j2ee" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" 
 version="2.4"
>
 
    <display-name>sailssandbox</display-name>
    
    <filter>
	    	<filter-name>redirect</filter-name>
	    	<filter-class>org.opensails.sails.oem.RedirectFilter</filter-class>
    </filter>
    <filter-mapping>
	    	<filter-name>redirect</filter-name>
	    	<url-pattern>/</url-pattern>
    </filter-mapping>    
    
    <servlet>
		<servlet-name>app</servlet-name>
		<servlet-class>org.opensails.sails.oem.SailsApplication</servlet-class>
		<init-param>
			<param-name>org.opensails.sails.ISailsApplicationConfigurator</param-name>
			<param-value>sailssandbox.Configurator</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
		<servlet-name>app</servlet-name>
		<url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
		<servlet-name>app</servlet-name>
		<url-pattern>/app/*</url-pattern>
    </servlet-mapping>

    <servlet>
		<servlet-name>Common</servlet-name>
		<servlet-class>org.opensails.sails.oem.CommonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
		<servlet-name>Common</servlet-name>
		<url-pattern>/common/*</url-pattern>
    </servlet-mapping>
   
  	<!-- Protect viento templates -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Viento Templates</web-resource-name>
			<url-pattern>/views/*</url-pattern>
		</web-resource-collection>
		<auth-constraint/>
	</security-constraint>
    
</web-app>
