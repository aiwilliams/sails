<!-- Follow the instructions here: http://maven.apache.org/maven-1.x/start/install.html
	to setup maven then from a console cd into this directory and run "maven test" -->

<project>
  <groupId>org.opensails</groupId>
  <artifactId>org.opensails.sails</artifactId>
  <currentVersion>0.1</currentVersion>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
    </dependency>
  </dependencies>
  <build>
  	<!-- Need to find a way to specify multiple source directories for build plugin; terminology? 
  		Currently it seems last one wins. -->
    <sourceDirectory>builtin</sourceDirectory>
    <sourceDirectory>builtin/views</sourceDirectory>
    <sourceDirectory>core</sourceDirectory>
    
    <unitTestSourceDirectory>test/unit</unitTestSourceDirectory>
    <unitTestSourceDirectory>test/fixture</unitTestSourceDirectory>
    <unitTestSourceDirectory>tester</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>
  </build>
</project>